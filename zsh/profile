# ~/.profile: Read by both zsh (sourced in ~/.zprofile) and the
# desktop session. Intended for environment variable assignments.

#
# Language
#

if [ -z "$LANG" ]; then
  export LANG='en_CA.UTF-8'
fi

#
# Executable files
#

export PATH="$HOME/.local/bin:$PATH"

#
# Temporary files
#

export TMPDIR="/tmp/$USER"
if [ ! -d "$TMPDIR" ]; then
  mkdir -p -m 700 "$TMPDIR"
fi

#
# Editors
#

export EDITOR="emacsclient -a '' -c"

#
# Python
#

export PYTHONUSERBASE="$HOME/.local"

if [[ `uname` == "Linux" ]]; then
    # Install tuxjdk from https://github.com/tuxjdk/tuxjdk
    # for better font rendering in Ubuntu.
    export PYCHARM_JDK="/usr/lib/jvm/tuxjdk-8.66.03"
fi

#
# R
#

export R_LIBS_USER="$HOME/.local/lib/R/library"

#
# Spark
#

export SPARK_HOME=/mnt/data/spark/spark
export PATH="$PATH:$SPARK_HOME/bin"
export PYSPARK_PYTHON=python3
export SPARK_LOCAL_IP=127.0.0.1
